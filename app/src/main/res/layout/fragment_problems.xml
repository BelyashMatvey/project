<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture1"
    tools:context=".ProblemsFragment">

    <EditText
        android:id="@+id/Sgen"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="30"
        android:hint="Input your genotip"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Fgen"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Input your genotip"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gam1"
        android:layout_width="72dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fgen" />

    <TextView
        android:id="@+id/gam01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:text="Gamets:"
        android:textColor="@color/norm"
        android:textSize="20dp"
        android:textStyle="bold|italic|normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fgen" />

    <TextView
        android:id="@+id/gam02"
        android:textStyle="bold|italic|normal"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="@color/norm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="17dp"
        android:text="Gamets:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sgen" />


    <TextView
        android:id="@+id/gam2"
        android:layout_width="65dp"
        android:layout_height="57dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sgen" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toStartOf="@+id/Sgen"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/Fgen"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toStartOf="@+id/Sgen"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/Fgen"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/solver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="160dp"
        android:backgroundTint="@color/teal_700"
        android:elevation="9dp"
        android:stateListAnimator="@null"
        android:text="Solve"
        android:textStyle="bold|italic|normal"
        android:translationZ="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TableLayout
        android:id="@+id/tablet"
        android:layout_width="259dp"
        android:layout_height="131dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toTopOf="@+id/solver"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:id="@+id/tablet2"
        android:layout_width="196dp"
        android:layout_height="126dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>