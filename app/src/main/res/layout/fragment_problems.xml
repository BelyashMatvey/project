<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".ProblemsFragment">

    <EditText
        android:id="@+id/Sgen"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:ems="30"
        android:hint="Input your genotip"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Fgen"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:hint="Input your genotip"
        android:layout_marginStart="17dp"
        android:layout_marginTop="78dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gam1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="100dp"
        android:background="@color/teal_700"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fgen" />

    <TextView
        android:id="@+id/gam01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="32dp"
        android:text="Gamets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fgen" />

    <TextView
        android:id="@+id/gam02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="17dp"
        android:text="Gamets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sgen" />

    <TextView
        android:id="@+id/gam2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:text=""
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sgen" />

    <TextView
        android:id="@+id/Res"
        android:layout_width="214dp"
        android:layout_height="150dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/solver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="104dp"
        android:text="Solve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Res"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toStartOf="@+id/Sgen"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toEndOf="@+id/Fgen"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="224dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toStartOf="@+id/Sgen"
        app:layout_constraintStart_toEndOf="@+id/Fgen"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="206dp"
        android:layout_height="143dp"
        app:layout_constraintBottom_toBottomOf="@+id/Res"
        app:layout_constraintEnd_toEndOf="@+id/Res"
        app:layout_constraintStart_toStartOf="@+id/Res"
        app:layout_constraintTop_toTopOf="@+id/Res">

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>